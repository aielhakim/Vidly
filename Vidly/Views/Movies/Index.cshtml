@Html.ActionLink("New Movie", "New", new { }, new { @class = "btn btn-primary" })
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>

        @*@foreach (var item in Model)
            {
