@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


@if (Model == null || Model.Count() <= 0)
{
    <label>No Customers</label>
}
else

{

    <table>
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@Html.ActionLink(item.Name, "Details", new { Id = item.Id }, null);</td>*@
                    <td>@Html.ActionLink(item.Name, "Edit", new { Id = item.Id }, null);</td>

                    <td> @item.MembershipType.Name</td>
                </tr>

            }
        </tbody>

    </table>
}